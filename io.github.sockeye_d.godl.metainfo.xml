<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>io.github.sockeye_d.godl</id>

    <name>godl</name>
    <summary>Godot version manager</summary>

    <developer id="io.github.sockeye_d">
        <name>sockeye-d (fishnpotatoes, fishy)</name>
    </developer>

    <metadata_license>MIT</metadata_license>
    <project_license>MIT</project_license>

    <description>
        <p> Manage your Godot projects and versions in one place. Features include:
            - Editor version bindings to projects that transfer across source control
            - Download versions of forks of Godot as well
            - Rich CLI for automation
            - Qt UI, good for KDE Plasma
        </p>
    </description>

    <provides>
        <binary>godl</binary>
    </provides>

    <categories>
        <category>Utility</category>
    </categories>

    <keywords>
        <keyword>godot</keyword>
        <keyword>utilities</keyword>
    </keywords>

    <branding>
        <color type="primary" scheme_preference="light">#478cbf</color>
        <color type="primary" scheme_preference="dark">#233440</color>
    </branding>

    <launchable type="desktop-id">io.github.sockeye_d.godl.desktop</launchable>
    <screenshots>
        <screenshot type="default">
            <image>https://github.com/sockeye-d/godl/raw/master/assets/overview.png</image>
        </screenshot>
        <screenshot>
            <image>https://github.com/sockeye-d/godl/raw/master/assets/local-versions.png</image>
        </screenshot>
        <screenshot>
            <image>https://github.com/sockeye-d/godl/raw/master/assets/remote-versions.png</image>
        </screenshot>
    </screenshots>

